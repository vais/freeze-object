{
  "env": {
    "es2020": true,
    "node": true
  },

  "overrides": [
    {
      "files": ["test.js"],
      "env": {
        "mocha": true
      }
    }
  ],

  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],

  "parserOptions": {
    "ecmaVersion": 2020
  },

  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  }
}
